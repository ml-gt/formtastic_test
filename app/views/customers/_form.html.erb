<%= semantic_form_for @customer do |f| %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :rating1, :label => '1..3, radio',        :collection => 1..3,        :as => :radio %>
    <%= f.input :rating2, :label => '1..3, check_boxes',  :collection => 1..3,        :as => :check_boxes %>
    <%= f.input :rating3, :label => '1..3, select',       :collection => 1..3,        :as => :select %>
    <%= f.input :rating4, :label => '(1..3).to_a, radio', :collection => (1..3).to_a, :as => :radio %>
    <%= f.input :rating5, :label => '[1,2,3], radio',     :collection => [1,2,3],     :as => :radio %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>

<% end %>
